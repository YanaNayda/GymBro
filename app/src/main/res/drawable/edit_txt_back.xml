<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#ADFFFFFF"/>
            <stroke
                android:width="4dp"
                android:color="#1B0B4B"/>
            <corners android:radius="10dp"/>
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="#ADFFFFFF" /> <!-- Цвет обычного фона -->
            <stroke
                android:width="4dp"
                android:color="#FFFFFF" /> <!-- Цвет обычной рамки -->
            <corners android:radius="10dp"/>
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>
</selector>